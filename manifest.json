{
  "manifest_version": 3,
  "name": "BetterTabs",
  "description": "Manage your open tabs like a pro",
  "version": "2.0",
  "action": {
    "default_icon": {
      "96": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "icons": {
    "64": "icon.png"
  },
  "permissions": [
    "tabs"
  ]
}
